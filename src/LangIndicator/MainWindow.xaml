<Window
    x:Class="LangIndicator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LangIndicator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    Title="LangIndicator"
    Width="40"
    Height="30"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="PingFang SC"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="Black" CornerRadius="10">
        <Grid>
            <TextBlock
                x:Name="StatusText"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="DemiBold" />

            <tb:TaskbarIcon
                IconSource="/Assets/favicon.png"
                MenuActivation="RightClick"
                PopupActivation="RightClick"
                ToolTipText="Lang Indicator">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="设置" />
                        <MenuItem Click="Exit_Click" Header="退出" />
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </Grid>
    </Border>
</Window>
